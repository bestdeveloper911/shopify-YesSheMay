<script>
document.addEventListener('DOMContentLoaded', function(){
  jQuery(document).on('click','.gift-card-template .gallery-navigation--scroll-button.scroll-right',function(){
      if($(window).width() > 768){
          $('.gallery-navigation--scroller').animate({
              scrollTop: '+=100px'
          });
      }
  });

  jQuery(document).on('click','.gift-card-template .gallery-navigation--scroll-button.scroll-left',function(){
      if($(window).width() > 768){
          $('.gallery-navigation--scroller').animate({
              scrollTop: '-=100px'
          });
      }
  });
});
</script>