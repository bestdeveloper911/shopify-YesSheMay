  @media screen and (min-width:990px){
  	.gift-card-template .gallery-navigation--scroll-button.scroll-left {
        height: auto;
        width: 100%;
        top: 0px;
        padding: 7px 0px;
      	background:0;
        display:block;
    }
    .gift-card-template .gallery-navigation--scroll-button.scroll-left svg {
        transform: rotate(180deg);
        color: #fff;
		width: 30px;
 	    height: 12px;
    }
    .gift-card-template  .gallery-navigation--scroll-button.scroll-right {
        display: block;
        height: auto;
        bottom: 0;
        width: 100%;
        background: 0;
    }
    
    .gift-card-template .gallery-navigation--scroll-button.scroll-right svg {
        transform: rotate(0deg);
        color: #fff;
		width: 30px;
 	    height: 12px;
    }
    
  }
