{% include 'image-with-text' %}

{% schema %}
{
  "name": "Image with Text",
  "class": "alt-img-with-text--section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Image with text"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section background color"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Section heading color",
      "default": "#4D4D4D"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Section subheading color",
      "default": "#4D4D4D"
    },
    {
      "type": "range",
      "id": "section_spacing_desktop",
      "label": "Desktop section spacing",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "section_spacing_mobile",
      "label": "Mobile section spacing",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "content_spacing",
      "label": "Space between content",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "image_with_text",
      "name": "Image with text",
      "settings": [
        {
          "type": "header",
          "content": "Desktop image"
        },
        {
          "id": "img_desktop",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "id": "img_position_desktop",
          "type": "select",
          "label": "Image position",
          "options": [
            {
              "value": "right",
              "label": "Right"
            },
            {
              "value": "left",
              "label": "Left"
            }
          ],
          "default": "left"
        },
        {
          "id": "img_width_desktop",
          "type": "range",
          "label": "Desktop image width",
          "min": 30,
          "max": 70,
          "step": 1,
          "unit": "%",
          "default": 50
        },
        {
          "id": "img_height_desktop",
          "type": "radio",
          "label": "Desktop image height",
          "options": [
            {
              "value": "natural",
              "label": "Natural height"
            },
            {
              "value": "custom",
              "label": "Custom height"
            }
          ],
          "default": "natural"
        },
        {
          "id": "custom_height_desktop",
          "type": "range",
          "label": "Desktop custom height",
          "min": 300,
          "max": 800,
          "step": 5,
          "unit": "px",
          "default": 500
        },
        {
          "type": "header",
          "content": "Mobile image"
        },
        {
          "id": "img_mobile",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "id": "img_position_mobile",
          "type": "select",
          "label": "Image position",
          "options": [
            {
              "value": "top",
              "label": "Top"
            },
            {
              "value": "bottom",
              "label": "Bottom"
            }
          ],
          "default": "top"
        },
        {
          "id": "img_height_mobile",
          "type": "radio",
          "label": "Mobile image height",
          "options": [
            {
              "value": "natural",
              "label": "Natural height"
            },
            {
              "value": "custom",
              "label": "Custom height"
            }
          ],
          "default": "natural"
        },
        {
          "id": "custom_height_mobile",
          "type": "range",
          "label": "Mobile custom height",
          "min": 300,
          "max": 800,
          "step": 5,
          "unit": "px",
          "default": 500
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "id": "content_background_color",
          "type": "color",
          "label": "Background color",
          "default": "#ffffff"
        },
        {
          "id": "preheading",
          "type": "text",
          "label": "Preheading",
          "default": "Preheading"
        },
        {
          "id": "preheading_color",
          "type": "color",
          "label": "Preheading color",
          "default": "#4d4d4d"
        },
        {
          "id": "heading",
          "type": "text",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "id": "heading_color",
          "type": "color",
          "label": "Heading color",
          "default": "#4d4d4d"
        },
        {
          "id": "heading_size",
          "type": "select",
          "label": "Heading size",
          "options": [
            {
              "value": "small",
              "label": "Small"
            },
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "large",
              "label": "Large"
            },
            {
              "value": "xlarge",
              "label": "Extra Large"
            }
          ],
          "default": "large"
        },
        {
          "id": "text_content",
          "type": "textarea",
          "label": "Text",
          "default": "Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review."
        },
        {
          "id": "text_content_color",
          "type": "color",
          "label": "Text color",
          "default": "#4d4d4d"
        },
        {
          "id": "button_link",
          "type": "url",
          "label": "Button link"
        },
        {
          "id": "button_text",
          "type": "text",
          "label": "Button text"
        },
        {
          "id": "button_style",
          "type": "select",
          "label": "Button style",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "primary_with_icon",
              "label": "Primary with icon"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            },
            {
              "value": "secondary_with_icon",
              "label": "Secondary with icon"
            },
            {
              "value": "signpost",
              "label": "Signpost link"
            }
          ]
        },
        {
          "id": "signpost_color",
          "type": "color",
          "label": "Signpost color",
          "default": "#111"
        },
        {
          "id": "block_link",
          "type": "checkbox",
          "label": "Apply link to the whole block",
          "default": false
        },
        {
          "id": "text_vertical_position",
          "type": "select",
          "label": "Vertical position",
          "options": [
            {
              "value": "top",
              "label": "Top"
            },
            {
              "value": "middle",
              "label": "Middle"
            },
            {
              "value": "bottom",
              "label": "Bottom"
            }
          ],
          "default": "middle"
        },
        {
          "id": "text_alignment",
          "type": "select",
          "label": "Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Image",
      "name": "Image with text",
      "blocks": [
        {
          "type": "image_with_text",
          "settings": {
            "img_position_desktop": "left"
          }
        },
        {
          "type": "image_with_text",
          "settings": {
            "img_position_desktop": "right"
          }
        }
      ]
    }
  ]
}

{% endschema %}