{% comment %}
  Loop through tag groups
{% endcomment %}

{%- capture tag_icon -%}
  <span class="filter-icon--checkbox">
    {% include 'icon-library', id: 'icon-checkbox' %}
  </span>
{%- endcapture -%}

{% comment %} Custom tag ordering {% endcomment %}
{%- assign custom_ordered_tags = section.settings.custom_ordered_tags | split: ',' -%}
{%- assign custom_tags = blank -%}

{%- for custom_ordered_tag in custom_ordered_tags -%}
  {%- assign custom_tag = custom_ordered_tag | strip -%}

  {%- unless collection.all_tags contains custom_tag -%}
    {%- continue -%}
  {%- endunless -%}

  {%-
    assign custom_tags = custom_tags
    | append: '|'
    | append: custom_tag
  -%}
{%- endfor -%}

{% assign sorted_tags = custom_tags | remove_first: '|' | split:  '|' | concat: collection.all_tags | uniq %}

{% comment %} Grid layout groups {% endcomment %}
{%- assign grid_categories_input = section.settings.grid_categories | split: ',' -%}
{%- assign grid_categories = blank -%}

{%- for category in grid_categories_input -%}
  {%- assign category_stripped = category | strip -%}
  {%-
    assign grid_categories = grid_categories
    | append: '|'
    | append: category_stripped
  -%}
{%- endfor -%}

{% assign grid_categories = grid_categories | remove_first: '|' | split:  '|' | uniq %}

{% for cat_item in cat_array %}
  {% assign display_as_grid = false %}
  {% if grid_categories contains cat_item %}
    {% assign display_as_grid = true %}
  {% endif %}
  {% assign show_swatches = false %}
  {% if settings.swatches_enable and settings.swatches_product_page_only == false %}
    {% assign swatch_trigger = settings.swatches_swatch_trigger | strip | downcase %}
    {% assign cat_name = cat_item | downcase %}
    {% if cat_name == swatch_trigger %}
      {% assign show_swatches = true %}
      {% assign swatch_style = settings.swatches_sidebar_filter_style %}
      {% comment %} Swatches should never follow the display_as_grid layout {% endcomment %}
      {% assign display_as_grid = false %}
    {% endif %}
  {% endif %}
  {% assign tag_total = 0 %}
  {% assign tag_array = '' | split: '' %}
  {% for tag in sorted_tags %}
    {% assign cat = tag | split: '_' | first %}
    {% if cat != tag and cat_item == cat %}
      {% assign tag_total = tag_total | plus: 1 %}
      {% assign tag_item = tag | split: ',' %}
      {% assign tag_array = tag_array | concat: tag_item %}
    {% endif %}
  {% endfor %}

  {% if tag_total > 0 and cat_item != 'Ship' %}
	<div class="plus-minus-toggle collapsed"></div>
    <h3
      class="
        productgrid--sidebar-title--small
        {% if section.settings.show_toggle %}productgrid--sidebar-title-hand{% endif %}
      "
      data-toggle="{% if section.settings.show_toggle %}toggle{% endif %}"
    >
      {{ cat_item }}
    </h3>
    <ul
      class="
        productgrid--sidebar-item
        filter-group
        {% if show_swatches %}
          productgrid--sidebar-item-swatches-{{ swatch_style }}
        {% endif %}
        {% if display_as_grid %}
          productgrid--sidebar-item-grid
        {% endif %}
        {% if section.settings.show_toggle %}productgrid--sidebar-none{% endif %}
      "
    >
      {% comment %}
        Loop through collection tags
      {% endcomment %}
      {% assign tag_count = 0 %}
      {% for tag in tag_array %}
        {% assign cat = tag | split: '_' | first %}
        {% assign tag_count = tag_count | plus: 1 %}

        {%- if show_swatches -%}
          {%- assign color_name = tag | remove_first: cat | remove_first: '_' -%}
          {% assign swatch_value_downcased = swatch_value | downcase %}
          {%- capture swatch -%}
            <div
              class="filter-item--swatch-wrapper"
              data-swatch-tooltip="{{ color_name }}"
            >
              <div class="filter-item--swatch">
                <div
                  class="filter-item--swatch-inner"
                  style="{% include 'swatch-styles', color_name: color_name %}"
                >
                </div>
              </div>
            </div>
          {%- endcapture -%}
        {%- endif -%}

        {% comment %}
          Strip out tag category prefix and add/remove link for tag filtering
        {% endcomment %}
        {%- capture tag_content -%}
          {%- if show_swatches and swatch_style == 'grid' -%}
            {{ swatch }}
          {%- else -%}
            {%- unless display_as_grid -%}
              {{- tag_icon -}}
            {%- endunless -%}
            {%- if show_swatches -%}
              {{ swatch }}
            {%- endif -%}
            <span class="filter-text">
              {{ tag | remove_first: cat | remove_first: '_' }}
            </span>
          {%- endif -%}
        {%- endcapture -%}

        {% assign filter_class = 'filter-item' %}
        {%- if current_tags contains tag -%}
          {% assign filter_class = filter_class | append: ' filter-item--active' %}
        {%- else -%}
          {% assign filter_class = filter_class | append: ' filter-item--inactive' %}
        {%- endif -%}
        {% unless current_tags contains tag %}
          {%- if tag_count > tag_limit -%}
            {% assign filter_class = filter_class | append: ' filter-item--hidden' %}
          {%- endif -%}
        {% endunless %}

        <li
          class="{{ filter_class }}"
          data-tag-advanced
          data-group="{{ cat_item }}"
          data-handle="{{ tag | handle }}"
          {% unless current_tags contains tag %}
            {% if tag_count > tag_limit %}data-hidden-default{% endif %}
          {% endunless %}
          {% if current_tags contains tag %}aria-current="true"{% endif %}
        >
          {% if current_tags contains tag %}
            {{ tag_content
              | link_to_remove_tag: tag
              | replace: '_ajax-collection-', ''
              | replace: '_ajax-collection', ''
            }}
          {% else %}
            {{ tag_content
              | link_to_add_tag: tag
              | replace: '_ajax-collection-', ''
              | replace: '_ajax-collection', ''
            }}
          {% endif %}
        </li>
      {% endfor %}

      {% if tag_count > tag_limit %}
        <li class="filter-item filter-item--toggle-more">
          <a class="filter-text--link" href="#" data-filter-toggle="false">
            {{ 'general.general.see_more' | t }}
          </a>
        </li>
      {% endif %}
    </ul>
  {% endif %}
{% endfor %}

<style>
@media screen and (min-width: 300px) {
   .plus-minus-toggle {
       cursor: pointer;
       height: 18px;
       position: relative;
       width: 18px;
       float: right;
       top: 17px;
  }
   .plus-minus-toggle:before, .plus-minus-toggle:after {
       background: #000;
       content: '';
       height: 1px;
       left: 0;
       position: absolute;
       top: 0;
       width: 18px;
       transition: transform 500ms ease;
  }
   .plus-minus-toggle:after {
       transform-origin: center;
  }
   .plus-minus-toggle.collapsed:after {
       transform: rotate(90deg);
  }
   .plus-minus-toggle.collapsed:before {
       transform: rotate(180deg);
  }
 
}
</style>
